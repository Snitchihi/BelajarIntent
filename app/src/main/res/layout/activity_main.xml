<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#6495ED"
        android:text="Chat"
        android:textColor="	#F0FFFF"
        android:textSize="35sp"
        app:drawableTint="#A63E3E"
        app:layout_constraintBottom_toTopOf="@+id/appCompatButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.686"
        tools:ignore="MissingConstraints,NotSibling"
        tools:layout_editor_absoluteX="7dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="446dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/appCompatButton"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:drawableLeft="@drawable/hehe_"
            android:onClick="pageSteven"
            android:textAlignment="textStart"
            android:text="Steven"
            android:background="@color/white"
            android:textSize="23dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/appCompatButton2"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:drawableLeft="@drawable/hihi"
            android:onClick="pageOlive"
            android:textAlignment="textStart"
            android:text="Olive"
            android:background="@color/white"
            android:textSize="23dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/appCompatButton3"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:drawableLeft="@drawable/haha"
            android:onClick="pageJuan"
            android:textAlignment="textStart"
            android:text="Juan"
            android:background="@color/white"
            android:textSize="23dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>